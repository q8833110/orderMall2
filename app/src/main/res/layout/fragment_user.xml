<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="@drawable/bg_user" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/radius_white_bg" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_user"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_user"
            android:layout_centerHorizontal="true"
            android:text="卡卡"
            android:textColor="@color/colorBlank333333"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/price" />

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                tools:text="L2青铜会员"
                android:textColor="#C15F0E"
                android:textSize="12sp" />


        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/ll_grade"
            android:layout_marginTop="19dp"
            android:background="@drawable/shape_line" />

        <LinearLayout
            android:id="@+id/ll_jifen"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/line"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/baodanjifen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/tv_baodanjifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="报单积分"
                    android:textColor="#B3B3B3"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:background="#E6E6E6" />

            <LinearLayout
                android:id="@+id/ll_xianjinjifen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_xianjinjifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="现金积分"
                    android:textColor="#B3B3B3"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:background="#E6E6E6" />

            <LinearLayout
                android:id="@+id/ll_jiangjinjifen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_jiangjinjifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="奖金积分"
                    android:textColor="#B3B3B3"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:background="#E6E6E6" />

            <LinearLayout
                android:id="@+id/ll_xiaofeijifen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_xiaofeijifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="消费积分"
                    android:textColor="#B3B3B3"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@id/ll_jifen"
            android:background="@drawable/shape_line" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/line1"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:id="@+id/ll_jiaoyi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line3"
            android:paddingStart="18dp"
            android:paddingEnd="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:text="我的交易订单"
                android:textColor="@color/colorBlank333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:background="@drawable/more" />

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/iv_right"
                android:text="查看全部"
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_jiaoyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_jiaoyi_title"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_qiangdan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/already_qiangdan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="13dp"
                    android:text="已抢单"
                    android:textColor="#B3B3B3"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shouyiy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/already_shouyi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="13dp"
                    android:text="已收益"
                    android:textColor="#B3B3B3"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_guamai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/already_guasell" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="13dp"
                    android:text="已挂卖"
                    android:textColor="#B3B3B3"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_maichu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/already_sell" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="13dp"
                    android:text="已卖出"
                    android:textColor="#B3B3B3"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/ll_jiaoyi"
            android:background="@color/colorF5F5F5" />

        <RelativeLayout
            android:id="@+id/rl_tuandui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line5"
            android:background="@color/colorWhite"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="11dp"
            android:paddingBottom="18dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tuandui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/iv1"
                android:text="我的团队"
                android:textColor="@color/colorBlank333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_yaoqinghaoyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_tuandui"
            android:background="@color/colorWhite"
            android:paddingStart="16dp"
            android:paddingTop="18dp"
            android:paddingEnd="11dp"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yaoqinghaoyou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/iv2"
                android:text="邀请好友"

                android:textColor="@color/colorBlank333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/more" />
        </RelativeLayout>

        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_yaoqinghaoyou"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:id="@+id/rl_gouwudingdan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line6"
            android:background="@color/colorWhite"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="11dp">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/iv3"
                android:text="我的购物订单"
                android:textColor="@color/colorBlank333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dizhiguanli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_gouwudingdan"
            android:background="@color/colorWhite"
            android:paddingStart="16dp"
            android:paddingTop="18dp"
            android:paddingEnd="11dp"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dizhi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/iv4"
                android:text="地址管理"

                android:textColor="@color/colorBlank333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/more" />
        </RelativeLayout>

        <View
            android:id="@+id/line8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_dizhiguanli"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:id="@+id/rl_shoukuanfangshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line8"
            android:background="@color/colorWhite"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="10dp"
            android:paddingBottom="18dp">

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shoukuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/iv6"
                android:text="收款方式"
                android:textColor="@color/colorBlank333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_shoukuanfangshi"
            android:background="@color/colorWhite"
            android:paddingStart="16dp"
            android:paddingTop="18dp"
            android:paddingEnd="10dp"
            android:paddingBottom="18dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/iv7"
                android:text="帮助中心"
                android:textColor="@color/colorBlank333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_help"
            android:background="@color/colorWhite"
            android:paddingStart="16dp"
            android:paddingTop="18dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/iv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/iv8"
                android:text="系统设置"
                android:textColor="@color/colorBlank333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/more" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <View
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:background="@drawable/bg_user"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/radius_white_bg">
    </ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_user"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="#000000"
        android:layout_marginTop="29dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:text="卡卡"
            android:textSize="15sp"
            android:textColor="@color/colorBlank333333"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_user"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="10dp"
            android:id="@+id/ll_grade">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/price"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_grade"
                android:text="L2青铜会员"
                android:textSize="12sp"
                android:textColor="#C15F0E"
                android:layout_marginStart="6dp"
                />


        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/ll_grade"
        android:id="@+id/line"
        android:layout_marginTop="19dp"
        android:background="@drawable/shape_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:id="@+id/ll_jifen"
        android:orientation="horizontal"
        android:layout_below="@id/line"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/baodanjifen"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlank333333"
                android:text="0"
                android:id="@+id/tv_baodanjifen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#B3B3B3"
                android:layout_marginTop="10dp"
                android:text="报单积分"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="29dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ll_xianjinjifen"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlank333333"
                android:text="0"
                android:id="@+id/tv_xianjinjifen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#B3B3B3"
                android:layout_marginTop="10dp"
                android:text="现金积分"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="29dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ll_jiangjinjifen"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlank333333"
                android:text="0"
                android:id="@+id/tv_jiangjinjifen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#B3B3B3"
                android:layout_marginTop="10dp"
                android:text="奖金积分"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="29dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ll_xiaofeijifen"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlank333333"
                android:text="0"
                android:id="@+id/tv_xiaofeijifen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#B3B3B3"
                android:layout_marginTop="10dp"
                android:text="消费积分"/>
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/ll_jifen"
        android:id="@+id/line1"
        android:background="@drawable/shape_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"
        android:id="@+id/line3"
        android:layout_below="@id/line1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingEnd="11dp"
        android:id="@+id/ll_jiaoyi_title"
        android:layout_below="@id/line3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的交易订单"
            android:textSize="15sp"
            android:textColor="@color/colorBlank333333"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_right"
            android:background="@drawable/more"
            android:layout_marginStart="6dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all"
            android:text="查看全部"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/iv_right"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_jiaoyi"
        android:layout_below="@id/ll_jiaoyi_title"
        android:background="@color/colorWhite"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ll_qiangdan"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/already_qiangdan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已抢单"
                android:textSize="12sp"
                android:textColor="#B3B3B3"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="13dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ll_shouyiy"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/already_shouyi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已收益"
                android:textSize="12sp"
                android:textColor="#B3B3B3"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ll_guamai"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/already_guasell"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已挂卖"
                android:textSize="12sp"
                android:textColor="#B3B3B3"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ll_maichu"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/already_sell"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已卖出"
                android:textSize="12sp"
                android:textColor="#B3B3B3"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="13dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorF5F5F5"
        android:layout_below="@id/ll_jiaoyi"
        android:id="@+id/line5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="11dp"
        android:paddingTop="24dp"
        android:paddingBottom="18dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/line5"
        android:id="@+id/rl_tuandui">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tuandui"
            android:id="@+id/iv1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorBlank333333"
            android:text="我的团队"
            android:layout_toEndOf="@id/iv1"
            android:layout_marginStart="14dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="11dp"
        android:paddingTop="18dp"
        android:paddingBottom="24dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/rl_tuandui"
        android:id="@+id/rl_yaoqinghaoyou">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yaoqinghaoyou"
            android:id="@+id/iv2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorBlank333333"
            android:text="邀请好友"

            android:layout_toEndOf="@id/iv2"
            android:layout_marginStart="14dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_below="@id/rl_yaoqinghaoyou"
        android:id="@+id/line6"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="11dp"
        android:paddingTop="24dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/line6"
        android:id="@+id/rl_gouwudingdan">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order"
            android:id="@+id/iv3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorBlank333333"
            android:text="我的购物订单"
            android:layout_toEndOf="@id/iv3"
            android:layout_marginStart="14dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="11dp"
        android:paddingTop="18dp"
        android:paddingBottom="24dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/rl_gouwudingdan"
        android:id="@+id/rl_dizhiguanli">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dizhi"
            android:id="@+id/iv4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorBlank333333"
            android:text="地址管理"

            android:layout_toEndOf="@id/iv4"
            android:layout_marginStart="14dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_below="@id/rl_dizhiguanli"
        android:id="@+id/line8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        android:paddingBottom="18dp"
        android:paddingTop="24dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/line8"
        android:id="@+id/rl_shoukuanfangshi">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shoukuan"
            android:id="@+id/iv6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorBlank333333"
            android:text="我的购物订单"
            android:layout_toEndOf="@id/iv6"
            android:layout_marginStart="14dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/rl_shoukuanfangshi"
        android:id="@+id/rl_help">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help"
            android:id="@+id/iv7"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorBlank333333"
            android:text="帮助中心"
            android:layout_toEndOf="@id/iv7"
            android:layout_marginStart="14dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="18dp"
        android:background="@color/colorWhite"
        android:layout_below="@id/rl_help"
        android:id="@+id/rl_setting">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting"
            android:id="@+id/iv8"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorBlank333333"
            android:text="系统设置"
            android:layout_toEndOf="@id/iv8"
            android:layout_marginStart="14dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>
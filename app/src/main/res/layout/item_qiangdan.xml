<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="14dp"
    android:paddingStart="13dp"
    android:background="@color/colorWhite"
    android:layout_marginTop="5dp">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/iv_image"
        android:scaleType="fitXY"
        android:src="@drawable/image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_toEndOf="@id/iv_image"
        android:layout_marginTop="18dp"
        android:textColor="@color/colorBlank333333"
        android:id="@+id/tv_title"
        android:text="扫地机器人 全自动家用强力吸尘器拖擦地一体机"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textSize="20sp"
        android:textColor="@color/colorFullRed"
        android:id="@+id/tv_price"
        android:text="1799"
        android:layout_alignStart="@id/tv_title"
        android:layout_below="@id/tv_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/colorFullRed"
        android:text="报单积分"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@id/tv_price"
        android:layout_below="@id/tv_title"
        android:layout_alignBottom="@id/tv_price"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:text="马上抢单"
        android:gravity="center"
        android:id="@+id/qiangdan"
        android:layout_below="@id/tv_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/radius_red"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="距离结束10小时20分"
        android:layout_below="@id/tv_price"
        android:layout_alignStart="@id/tv_price"
        android:textSize="12sp"
        android:layout_marginTop="1dp"/>

    <ProgressBar
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/bg_progress"
        android:layout_below="@id/qiangdan"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/qiangdan"
        style="?android:attr/progressBarStyleHorizontal"
        />
</RelativeLayout>
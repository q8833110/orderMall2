<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/title_back" />

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_marginBottom="50dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【订单编号】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id"
                    android:layout_marginTop="15dp"
                    android:text="【充值金额】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/id"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price"
                    android:layout_marginTop="15dp"
                    android:text="【订单时间】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/price"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time"
                    android:layout_marginTop="15dp"
                    android:text="【充值方式】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/pay_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/time"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_pay_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@id/pay_style" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:gravity="center_vertical"
                android:text="商家收款" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【收款方式】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_type"
                    android:layout_marginTop="15dp"
                    android:text="【收款账号】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/payment_type"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/paymeng_amount" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_type"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@id/iv_amount"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amount"
                    android:layout_marginTop="15dp"
                    android:text="【收款人】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/iv_amount"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/paymeng_amount" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amount"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@id/iv_name"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/payment_qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="15dp"
                    android:text="【收款二维码】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_below="@id/payment_qrcode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="12dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF5F5F5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:gravity="center_vertical"
                android:text="充值凭证" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorF5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:paddingBottom="18dp"
                android:paddingTop="13dp">

                <RelativeLayout
                    android:id="@+id/rl_add1"
                    android:layout_width="138dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="39dp"
                    android:layout_marginStart="29dp"
                    android:background="#E5E5E5">

                    <ImageView
                        android:id="@+id/add1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/jia" />

                    <ImageView
                        android:id="@+id/pay1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/delete2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/delete"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_add2"
                    android:layout_width="138dp"
                    android:layout_height="86dp">

                    <ImageView
                        android:id="@+id/add2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/jia" />

                    <ImageView
                        android:id="@+id/pay2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/delete1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/delete"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF5F5F5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:gravity="center_vertical"
                android:text="充值凭证" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorF5F5F5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="24dp"
                android:paddingEnd="22dp"
                android:paddingStart="20dp"
                android:paddingTop="16dp"
                android:text="订单提交前需要将充值金额通过选择支付方式按照商家提供账户进行支付，支付成功后将支付结果截图，并上传支付凭证栏进行上传。若未上传支付凭证将充值不成功，因此给你带来的财产损失自行负责。若交易存在问题可直接联系客服。客服热线：400800769 028-51672112"
                android:textColor="#999999"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF5F5F5" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="联系卖家"
            android:textColor="@color/colorBlank333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="55dp"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/colorFullRed"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_already_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="26dp"
            android:layout_weight="1"
            android:background="@color/colorFullRed"
            android:gravity="center"
            android:text="确认已付款"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>

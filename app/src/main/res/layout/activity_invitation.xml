<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_invitation"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/back_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="邀好友 拿积分"
        android:textColor="@color/colorWhite"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="邀请好友一起购物吧"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/bg8"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg9"
            android:gravity="center"
            android:text="我的邀请码"
            android:textColor="@color/colorBlank333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="254dp"
            android:layout_height="43dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/bg_radi_20"
            tools:text="5693120"
            android:textSize="18sp"
            android:textColor="@color/colorBlank333333"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/tv_code"/>


        <ImageView
            android:layout_width="104dp"
            android:layout_height="102dp"
            android:id="@+id/iv_qrcode"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载二维码"
            android:id="@+id/down"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/colorFullRed"
            />
    </LinearLayout>
</LinearLayout>
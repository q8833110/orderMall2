<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite">
    <include layout="@layout/title_back" />

    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/success"
                    android:id="@+id/iv_status"
                    android:layout_marginTop="11dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值成功"
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_status"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlank333333"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:id="@+id/tv_info"
                android:textColor="@color/colorBlank333333"
                android:text="+1500报单积分"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:textColor="#999999"
                android:id="@+id/tv_progress"
                android:text="节点已确认，充值积分已到账"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/colorFullRed" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorF5F5F5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="【订单编号】"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="BXC201904182191"
                    android:id="@+id/id"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="【充值金额】"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/id"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="1000.00元"
                    android:id="@+id/price"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/id"
                    android:layout_alignParentEnd="true"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="【订单时间】"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/price"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="1000.00元"
                    android:layout_marginTop="15dp"
                    android:id="@+id/time"
                    android:layout_below="@id/price"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="【充值方式】"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/time"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="1000.00元"
                    android:layout_marginTop="15dp"
                    android:id="@+id/pay_style"
                    android:layout_below="@id/time"
                    android:layout_alignParentEnd="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time"
                    android:layout_toStartOf="@id/pay_style"
                    android:layout_marginTop="15dp"
                    android:id="@+id/iv_pay_style"
                    android:src="@drawable/zhifubao"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="商家收款"
                android:layout_marginStart="22dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="【收款方式】"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="BXC201904182191"
                    android:id="@+id/payment_type"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="【收款账号】"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/payment_type"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/paymeng_amount"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/payment_type"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_amount"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="1000.00元"
                    android:id="@+id/amount"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/payment_type"
                    android:layout_toStartOf="@id/iv_amount"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="【收款人】"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/amount"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/paymeng_amount"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/iv_amount"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="1000.00元"
                    android:layout_marginTop="15dp"
                    android:id="@+id/name"
                    android:layout_below="@id/amount"
                    android:layout_toStartOf="@id/iv_name"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlank333333"
                    android:text="【收款二维码】"
                    android:id="@+id/payment_qrcode"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/name"
                    />

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_below="@id/payment_qrcode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:id="@+id/iv_qrcode"
                    android:src="@color/colorFullRed"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF5F5F5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="充值凭证"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorF5F5F5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:paddingTop="13dp"
                android:paddingBottom="18dp">

                <ImageView
                    android:layout_width="138dp"
                    android:layout_height="86dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginEnd="39dp"
                    android:id="@+id/pay1"/>
        
                <ImageView
                    android:layout_width="138dp"
                    android:layout_height="86dp"
                    android:id="@+id/pay2"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF5F5F5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="充值凭证"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorF5F5F5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="22dp"
                android:paddingBottom="24dp"
                android:textSize="12sp"
                android:textColor="#999999"
                android:lineSpacingExtra="3dp"
                android:text="订单提交前需要将充值金额通过选择支付方式按照商家提供账户进行支付，支付成功后将支付结果截图，并上传支付凭证栏进行上传。若未上传支付凭证将充值不成功，因此给你带来的财产损失自行负责。若交易存在问题可直接联系客服。客服热线：400800769 028-51672112"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

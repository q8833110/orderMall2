<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/title_back" />

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlank333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:textColor="#999999"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingTop="8dp"
                android:paddingBottom="15dp">

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="43dp"
                    android:paddingEnd="43dp">

                    <ImageView
                        android:id="@+id/circle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/selecter_circle" />

                    <View
                        android:id="@+id/mid_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorBDBDBD" />

                    <ImageView
                        android:id="@+id/circle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/selecter_circle" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="下单付款"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:text="节点确认"
                    android:textSize="12sp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorF5F5F5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【订单编号】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id"
                    android:layout_marginTop="15dp"
                    android:text="【充值金额】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price"
                    android:layout_marginTop="15dp"
                    android:text="【订单时间】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time"
                    android:layout_marginTop="15dp"
                    android:text="【充值方式】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/pay_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_pay_style"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/time"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/pay_style" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:gravity="center_vertical"
                android:text="商家收款" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="【收款方式】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_type"
                    android:layout_marginTop="15dp"
                    android:text="【收款账号】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_type"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/paymeng_amount" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/payment_type"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@id/iv_amount"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amount"
                    android:layout_marginTop="15dp"
                    android:text="【收款人】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_amount"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/paymeng_amount" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/amount"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@id/iv_name"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/payment_qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="15dp"
                    android:text="【收款二维码】"
                    android:textColor="@color/colorBlank333333"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_below="@id/payment_qrcode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF5F5F5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:gravity="center_vertical"
                android:text="充值凭证" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorF5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:paddingTop="13dp"
                android:paddingBottom="18dp">

                <ImageView
                    android:id="@+id/pay1"
                    android:layout_width="138dp"
                    android:layout_height="86dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginEnd="39dp" />

                <ImageView
                    android:id="@+id/pay2"
                    android:layout_width="138dp"
                    android:layout_height="86dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorF5F5F5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="22dp"
                android:gravity="center_vertical"
                android:text="充值凭证" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorF5F5F5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:paddingStart="20dp"
                android:paddingTop="16dp"
                android:paddingEnd="22dp"
                android:paddingBottom="24dp"
                android:text="订单提交前需要将充值金额通过选择支付方式按照商家提供账户进行支付，支付成功后将支付结果截图，并上传支付凭证栏进行上传。若未上传支付凭证将充值不成功，因此给你带来的财产损失自行负责。若交易存在问题可直接联系客服。客服热线：400800769 028-51672112"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
